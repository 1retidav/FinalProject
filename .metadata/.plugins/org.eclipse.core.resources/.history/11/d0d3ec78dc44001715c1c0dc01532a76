package graphics;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class GUI 
{
	private BufferedImage image = new BufferedImage(1280, 720, BufferedImage.TYPE_INT_ARGB);
	private BufferedImage blankImage = new BufferedImage(1280, 720, BufferedImage.TYPE_INT_ARGB);
	
	public void loadImage(String path)
	{
		try
		{
			image = ImageIO.read(new File(path));
		} catch(IOException e) {
			System.out.println("Could not load GUI image: " + path);
		}
	}
	
	public void SetVisible(boolean toSet)
	{
		if(!toSet)
		{
			
		} else {
			
		}
	}
}
