package main;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.JFrame;
import javax.swing.Timer;

import graphics.Graphics3D;
import io.Input;

public class Main 
{
	static Graphics3D graphicsHandler;
	
	public static void main(String[] args) 
	{	
		graphicsHandler = new Graphics3D();
		graphicsHandler.getWindow().setSize(1280, 720);
		graphicsHandler.getWindow().setTitle("Game Title");
		graphicsHandler.getWindow().setResizable(false);
		
		graphicsHandler.getWindow().addKeyListener(new Input.keyHandler());
		new Timer(16, new ActionListener(){@Override public void actionPerformed(ActionEvent arg0) {mainGameLoop();}}).start();
	}
	
	public static void mainGameLoop()
	{
		
		
		if(Input.IsKeyDown('w'))
		{
			JFrame f = new JFrame();
			f.setVisible(true);
		}
	}
}
