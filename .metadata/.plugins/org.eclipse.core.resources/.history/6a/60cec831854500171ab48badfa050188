package core;

import com.sun.j3d.utils.universe.SimpleUniverse;

import graphics.Camera;
import graphics.Graphics3D;

public class Player extends Character 
{
	private Camera playerCamera = new Camera();
	
	public Player()
	{
		
	}
	
	public Player(Graphics3D graphicsHandler)
	{
		playerCamera.setUniverse(graphicsHandler.getUniverse());
		getObject().setMaterial("Images//TestImage.png");
		graphicsHandler.AddObject(getObject());
		update();
	}
	
	@Override
	public void move(double x, double y, double z)
	{
		playerCamera.move(x, y, z);
	}
	
	public void update()
	{
		playerCamera.SetRotation(getRotation().y);
		playerCamera.Update();
	}
}
