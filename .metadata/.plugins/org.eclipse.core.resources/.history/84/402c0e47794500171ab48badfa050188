package graphics;

import javax.media.j3d.Appearance;
import javax.media.j3d.Texture2D;
import javax.vecmath.Vector3d;

import com.sun.j3d.utils.geometry.Box;

import core.GameObject;

public class BoxObject extends GameObject 
{
	private static Box shape = new Box();
	private static Appearance material = new Appearance();
	
	public BoxObject()
	{
		
	}
	
	public BoxObject(Vector3d position, Vector3d rotation, Vector3d scale)
	{
		
	}
	
	public BoxObject(Vector3d min, Vector3d max)
	{
		
	}
	
	public void setMaterial(String path)
	{
		material.setTexture(new Texture2D());
	}
	
	public Box getShape()
	{
		return shape;
	}
}
